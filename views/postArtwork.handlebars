<div class="about container mt-5" style="color: #F0F8FF;">

    <form action="/api/post/upload" method="POST" enctype="multipart/form-data" id="add-artwork">
        <div class="row">
            <div class="col-lg-4">
                <label for="basic-url">Artwork Title</label>
                <div class=" input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
                    </div>
                    <input id="artwork-title" type="text" class="form-control" placeholder="Independence Day...">
                </div>
            </div>
            <div class="col-lg-2 mb-3">
                <label class="form-label mr-2">Grade level</label>
                <select id="grade-value" class="form-select">
                    <option selected>Choose...</option>
                    <option value="9">9-th</option>
                    <option value="10">10-th</option>
                    <option value="11">11-th</option>
                    <option value="12">12-th</option>
                </select>
            </div>
            <div class="col-lg-6">

            </div>
            <div class="col-lg-6">
                <label for="basic-url">Repository link</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Repository</span>
                    </div>
                    <input id="repo-link" type="text" class="form-control"
                        placeholder="https://github.com/user-name/...">
                </div>
            </div>
            <div class="col-lg-6">

            </div>
            <div class="col-lg-6">
                <label for="basic-url">Google File Identifier</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">ID</span>
                    </div>
                    <input id="artwork-link" type="text" class="form-control"
                        placeholder="https://drive.google.com/file/...">
                </div>
            </div>


            {{!-- <div class="col-lg-6">
                <label for="basic-url">Repo link</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">Repository</span>
                    </div>
                    <input id="artwork-link" type="text" class="form-control"
                        placeholder="https://github.com/user-name/...">
                </div>
            </div> --}}
            <div class="col-lg-6">

            </div>

            <div class="col-lg-6 input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Description</span>
                </div>
                <textarea maxlength="150" id="description-artwork" class="form-control"
                    placeholder="Limit: 150 characters"></textarea>
            </div>
            <div class="col-lg-6">

            </div>


            <div class="col-lg-6 mb-3">
                {{!-- {{typeof msg != 'undefined' ? msg: ''}} --}}
                {{#if msg}}
                <label>{{msg}}</label>
                {{else}}
                <label class="form-label" for="customFile">Upload directory location
                    <br>
                    <small class="text-muted" style="font-size: 10px;">Files no larger than 10 MB</small>
                </label>
                {{/if}}
                <input type="hidden" id="user_id" value="75" />
                <input name="myArtwork" type="file" class="form-control" id="uploadFile" />
            </div>
            <div class="col-lg-6">

            </div>


            {{#if msg}}
            {{msg}}
            {{/if}}
            <div class="col-md-4 mb-3">
                <button type="submit" id="submit_artwork" class="w-100 btn btn-color">Submit
                    Artwork</button>
            </div>
            <div class="col-md-2">
                <a href="/">
                    <span class="w-100 btn btn-danger">Cancel</span>
                </a>
            </div>
        </div>
    </form>
</div>


<script src="../../eventListeners.js"></script>