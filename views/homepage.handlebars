  <header>
    {{#if loggedIn}}
    <a href="profilepage">{{first_name}} {{last_name}}</a>
    {{else}}
    <a href="/login">Log In</a>
    {{/if}}
  </header>
  {{#if loggedIn}}
  <ul>
    <li>
      <a href="/api/post">
        <button type="button" class="btn add-btn" id="add-artwork"><i class="fas fa-plus-circle mr-2"></i>Add
          artwork</button>
      </a>
    </li>
    <li><a href="/api/users/artworks">Artworks</a></li>
  </ul>
  {{else}}
  <ul>

  </ul>
  {{/if}}
